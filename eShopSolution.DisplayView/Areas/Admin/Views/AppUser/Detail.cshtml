@model eShopSolution.Data.Entities.AppUser
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- MAIN CONTENT-->
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <a  asp-area="Admin" asp-controller="AppUser" asp-action="Index"><button class='btn btn-dark' style='margin:0 0 15px 20px'>Quay lại</button></a>
          
                <div class='form-create'>
                    <div class='row'>
                        <div class='col-sm-8'>
                            <input type="hidden" class='form-control' asp-for="Id" required>
                            <div class='row'>
                                <div class='col-sm-6'>
                                    <div class='form-group'>
                                        <label><h4>Họ  :</h4></label>
                                        <input readonly type="text" class='form-control' asp-for="FirstName" required>
                                    </div>
                                </div>
                                <div class='col-sm-6'>
                                    <div class='form-group'>
                                        <label><h4>Tên  :</h4></label>
                                        <input readonly type="text" class='form-control' asp-for="DisplayName" required>
                                    </div>
                                </div>
                            </div>
                            <div class='row'>
                                <div class='col-sm-6'>
                                    <div class='form-group'>
                                        <label><h4>UserName  :</h4></label>
                                        <input readonly type="text" class='form-control' asp-for="UserName" required>
                                    </div>
                                </div>
                                <div class='col-sm-6'>
                                    <div class='form-group'>
                                        <label><h4>Trạng thái  :</h4></label>
                                        <input readonly type="text" class='form-control' asp-for="LockoutEnabled" required>
                                    </div>
                                </div>
                            </div>
                            <div class='row'>
                                <div class='col-sm-6'>
                                    <div class='form-group'>
                                        <label><h4>Ngày sinh  :</h4></label>
                                        <input readonly type="text" class='form-control' asp-for="DateOfBirth" required>
                                    </div>
                                </div>
                                <div class='col-sm-6'>
                                    <div class='form-group'>
                                        <label><h4>Số điện thoại :</h4></label>
                                        <input readonly type="text" class='form-control' asp-for="PhoneNumber" required>
                                    </div>
                                </div>
                            </div>
                            <div class='row'>
                                <div class='col-sm-6'>
                                    <label><h4>Địa chỉ :</h4></label>
                                    <input readonly type="text" class='form-control' asp-for="Address" required>
                                </div> <div class='col-sm-6'>
                                    <label><h4>Giới tính :</h4></label>
                                    <input readonly type="text" class='form-control' asp-for="Gender" required>
                                </div>
                            </div>
                        </div>
                            <div class='col-sm-4'>
                                <div class='form-group'>  
                                    <img id="imgPre" src="~/Admin/images/avatar.png" alt="Ảnh đại diện" id='img_Create_MonAn' name='img_Create_MonAn' style='width: 100%; height: 300px'>
                                    
                                </div>
                            </div>
                        </div>
                        <div class='hr'></div>
                        
                    </div>
           
        </div>
    </div>
</div>


