
@model eShopSolution.Data.Entities.AppUser
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- MAIN CONTENT-->
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <a href=""><button class='btn btn-dark' style='margin:0 0 15px 20px'>Quay lại</button></a>
            <form asp-action="Edit" asp-controller="AppUser" enctype="multipart/form-data">
                <div class='form-create'>
                    <div class='row'>
                        <div class='col-sm-8'>
                            <input type="hidden" class='form-control' asp-for="Id" required>
                            <div class='row'>
                                <div class='col-sm-6'>
                                    <div class='form-group'>
                                        <label><h4>FirstName  :</h4></label>
                                        <input type="text" class='form-control' asp-for="FirstName" required>
                                    </div>
                                </div>
                                <div class='col-sm-6'>
                                    <div class='form-group'>
                                        <label><h4>DisplayName :</h4></label>
                                        <input type="text" class='form-control' asp-for="DisplayName" required>
                                    </div>
                                </div>
                            </div>

                            <div class='row'>
                                <div class='col-sm-6'>
                                    <label><h4>Address :</h4></label>
                                    <input type="text" class='form-control' asp-for="Address" required>
                                </div> <div class='col-sm-6'>
                                    <label><h4>Gender :</h4></label>
                                    <input type="text" class='form-control' asp-for="Gender" required>
                                </div>
                            </div>
                            <div class='row'>
                                <div class='col-sm-6'>
                                    <label><h4>DateOfBirth :</h4></label>
                                    <input type="text" class='form-control' asp-for="DateOfBirth" required>

                                </div>
                            </div>
