@model eShopSolution.Data.Entities.Order

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- MAIN CONTENT-->
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <!-- DATA TABLE -->
                    <h3 class="title-5 m-b-35">data table</h3>
                    <div class="table-data__tool">
                        
                        <div class="table-data__tool-right">
                            <a asp-area="Admin" asp-controller="Order" asp-action="Index">
                                <button class="au-btn au-btn-icon au-btn--green au-btn--small">
                                    <i class="zmdi zmdi-plus">Back</i>
                                </button>
                            </a>
                          
                        </div>
                    </div>
                    <div class="table-responsive table-responsive-data2">
                        <table class="table table-data2">
                            <thead>
                                <tr>
                                    <th>Tên sản phẩm</th>
                                    <th>Giá</th>
                                    <th>Số lượng </th>
                                    <th>Note </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var t in ViewBag.list)
                                {
                                <tr class="tr-shadow">
                                    <td> @t.GetType().GetProperty("NameProduct").GetValue(t, null)</td>
                                    <td> @t.GetType().GetProperty("Cost").GetValue(t, null)</td>
                                    <td> @t.GetType().GetProperty("Amount").GetValue(t, null)</td>
                                    <td> @t.GetType().GetProperty("Note").GetValue(t, null)</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- END DATA TABLE -->
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="copyright">
                        <p>Copyright © 2018 Colorlib. All rights reserved. Template by <a href="https://colorlib.com">Colorlib</a>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

