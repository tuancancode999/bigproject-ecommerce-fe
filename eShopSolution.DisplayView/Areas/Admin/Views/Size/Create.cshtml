@model eShopSolution.ViewModels.Request.SizeCreateRequest
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- MAIN CONTENT-->
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <a asp-area="Admin" asp-action="CreateSize" asp-controller="Size"><button class='btn btn-dark' style='margin:0 0 15px 20px'>Quay lại</button></a>
            <form asp-action="Edit" asp-controller="Size" enctype="multipart/form-data">
                <div class='form-create'>
                    <div class='row'>
                        <div class='col-sm-8'>
                            <div class='row'>
                               
                                <div class='col-sm-6'>
                                    <div class='form-group'>
                                        <label><h4>Tên Size Sản Phẩm :</h4></label>
                                        <input type="text" class='form-control' asp-for="Size" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class='col-sm-4'>
                            <div class='form-group'>
                                <img id="imgPre" src="~/Admin/images/Size.png" alt="Ảnh đại diện" id='img_Create_MonAn' name='img_Create_MonAn' style='width: 100%; height: 300px'>
                            </div>
                        </div>

                    </div>
                    <div class='hr'></div>
                    <button type='submit' class='btn btn-primary' style='width: 100%'>Add Size</button>
                </div>
            </form>
        </div>
    </div>
</div>


